[data]
    shared_machine = {{ eq $sharedMachine "y" }}
    proxy_host = {{ $proxy_host | quote }}
    proxy_port = {{ $proxy_port | quote }}
    fullname = {{ $fullname | quote }}
    email = {{ $email | quote }}
    github_username = {{ $github_username | quote }}
